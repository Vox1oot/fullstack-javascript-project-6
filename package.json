{
  "name": "@hexlet/code",
  "version": "0.1.0",
  "description": "Task Manager",
  "type": "module",
  "main": "server/plugin.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "start": "fastify start server/plugin.js -l info -a 0.0.0.0 -p ${PORT:-5000}",
    "migrate": "knex migrate:latest --env=production",
    "migrate:rollback": "knex migrate:rollback --env=production",
    "seed": "knex seed:run --env=production",
    "reset": "npm run migrate:rollback && npm run migrate",
    "postdeploy": "npm run migrate",
    "dev:frontend": "webpack --watch --progress",
    "dev:backend": "fastify start server/plugin.js -l debug -P -o -p 3000 --watch --verbose-watch --ignore-watch='node_modules .git .sqlite'",
    "dev:migrate": "knex migrate:latest --env=development --verbose",
    "dev:rollback": "knex migrate:rollback --env=development --all --verbose",
    "dev:seed": "knex seed:run --env=development",
    "dev:reset": "npm run dev:rollback && npm run dev:migrate",
    "test": "jest --verbose --runInBand",
    "test:coverage": "jest --coverage --coverageProvider=v8",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vox1oot/fullstack-javascript-project-6.git"
  },
  "keywords": [],
  "author": "Vitaliy Morzhov",
  "license": "ISC",
  "dependencies": {
    "@fastify/formbody": "^7.x",
    "@fastify/passport": "^2.5.0",
    "@fastify/secure-session": "^7.x",
    "@fastify/sensible": "^5.6.0",
    "@fastify/static": "^6.x",
    "@fastify/view": "^7.x",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.x",
    "css-loader": "^6.x",
    "dotenv": "^16.x",
    "fastify": "^4.x",
    "fastify-cli": "^6.x",
    "fastify-method-override": "^1.x",
    "fastify-objectionjs": "^2.0.1",
    "fastify-plugin": "^5.1.0",
    "i18next": "^21.x",
    "knex": "^2.4.0",
    "mini-css-extract-plugin": "^2.x",
    "objection": "^3.x",
    "objection-unique": "^1.x",
    "pg": "^8.x",
    "pug": "^3.x",
    "qs": "^6.x",
    "rollbar": "^2.26.4",
    "webpack": "^5.x",
    "webpack-cli": "^4.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^9.8.0",
    "@jest/globals": "^30.0.2",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.27.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-cli": "^30.0.2",
    "lodash": "^4.17.21",
    "rimraf": "^6.1.2",
    "sqlite3": "^5.1.7"
  },
  "overrides": {
    "better-sqlite3": "^11.8.1"
  }
}
