extends ../layouts/index.pug

block header
  = t('tasks.edit.title')

block content
  form(action=`/tasks/${task.id}` method="post")
    +input(task, 'name', errors)(maxlength='100')
    +inputTextarea(task, 'description', errors)
    +inputSelect(statuses, 'statusId', errors, task)
    +inputSelect(executors, 'executorId', errors, task)
    +inputSelectMultipleLabels(labels, 'labels', errors, task)
    input(name="_method" value='patch' type='hidden')
    +submit(task)(value=t('buttons.change'))