extends ../layouts/index.pug

block header
  = t('users.new.title')

block content
  .row.justify-content-center
    .col-12.col-md-8
      .card.shadow-sm
        .card-body.row.p-5
          .col-12.col-md-6.mt-3.mt-mb-0
            +formFor()(action='/users' method='post')
              +input(user, 'firstName', errors)(type="text")
              +input(user, 'lastName', errors)(type="text")
              +input(user, 'email', errors)(type="text")
              +input(user, 'password', errors)(type="password")
              +submit(user)(value=t('buttons.save'))
