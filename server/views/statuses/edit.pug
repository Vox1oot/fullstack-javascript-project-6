extends ../layouts/index.pug

block header
  = t('statuses.edit.title')

block content
  +formFor(status)(action=`/statuses/${status.id}` method='post')
    +input(status, 'name', errors)(type="text" value= status.name)
    input(name="_method" type='hidden' value='patch')
    +submit(status)(value=t('buttons.change'))